package ru.game.client;
import org.eclipse.swt.SWT;
import org.eclipse.swt.layout.GridData;
import org.eclipse.swt.layout.GridLayout;
import org.eclipse.swt.widgets.Display;
import org.eclipse.swt.widgets.Shell;

public class TetrisGame extends Shell {

	private static TetrisCanvas tetris;
	private static TetrisMenu menu;

	public static void main(String args[]) 
	{
		Display display = new Display();
		Connect connect = new Connect();
		TetrisGame shell = new TetrisGame(display, SWT.TITLE | SWT.CLOSE | SWT.MIN, connect);// кнопочки
																							// свернуть,
																							// закрыть

		shell.open();
		shell.layout();

		while (!shell.isDisposed()) {
			if (!display.readAndDispatch())// читает события из очереди
											// сообщений
				display.sleep();
		}
		display.dispose();
		connect.closeConnect();
	}

	public TetrisGame(Display display, int style, Connect connect) { // конструктор
		super(display, style); // вызов конструктора суперкласса
		createContentsofWindow(connect);
	}

	// задаем внешний вид окна игры
	protected void createContentsofWindow(Connect connect) {
		setBounds(250, 50, 545, 595); // положение и размеры окна
		setText("Tetris Game");

		setLayout(new GridLayout());

		tetris = new TetrisCanvas(this, connect);
		tetris.setLayoutData(new GridData(SWT.FILL, SWT.FILL, true, true)); // заполнение
																			// по
																			// горизонтали
																			// и
																			// вертикали
		menu = new TetrisMenu(this);
		menu.createMenu(this, tetris);
	}

	@Override
	protected void checkSubclass() {
		// переопределяем метод (отключаем проверку на подклассы)
	}
}
