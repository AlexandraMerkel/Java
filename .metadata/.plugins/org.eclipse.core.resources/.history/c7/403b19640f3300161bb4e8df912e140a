package ru.game.message;
import java.io.Serializable;

public class Message implements Serializable{
	
	private static final long serialVersionUID = 1L;
	private String message;
	private Object additionalData;
	
	public enum Type{
		NEW_SESSION,
		CLOSE_SESSION,
		JOIN,
		TEXT,
		KEYNUMBER, // нажатия клавиш
		FORMNUMBER, // выборы фигур
		SUCCESS,
		ERROR,
		GET_AVAILABLE_SESSIONS
	}
	private Type messageType = Type.TEXT;
	private int number; // мое
	
	public Message(Type newSession, String message){
		this.messageType = newSession;
		this.message = message;
	}
	
	public Message(String message){
		this(Type.TEXT, message);
	}
	
	public Message(){
		this(Type.TEXT,"");
	}
	
	public void setMessageType(Type messageType) {
		this.messageType = messageType;
	}
	
	public Message(Type messageType, int number) { // мое
		this.messageType = messageType;
		this.number = number;
	}
	
	public Type getMessageType() {
		return messageType;
	}
	
	public void setMessage(String message){
		this.message = message;
	}
	
	public String getMessage(){
		return message;
	}

	public Object getAdditionalData() {
		return additionalData;
	}

	public void setAdditionalData(Object additionalData) {
		this.additionalData = additionalData;
	}
}
